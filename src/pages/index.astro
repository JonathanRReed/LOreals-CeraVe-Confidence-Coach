---
import HeaderBrand from '../components/HeaderBrand.astro';
import ExpectationTimeline from '../components/ExpectationTimeline.astro';
import FooterLegal from '../components/FooterLegal.astro';
import OnboardingForm from '../islands/OnboardingForm';
import PlanDisplay from '../islands/PlanDisplay';
import PatchTestModal from '../islands/PatchTestModal';
import MythCheck from '../islands/MythCheck';
import ProgressTracker from '../islands/ProgressTracker';
import ReminderSetup from '../islands/ReminderSetup';
import '../styles/globals.css';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>CeraVe Confidence Coach - Build Your Skincare Routine</title>
		<meta name="description" content="Get a personalized CeraVe skincare routine designed for your unique skin needs with evidence-based guidance." />
	</head>
	<body class="antialiased">
		<HeaderBrand />
		
		<main>
			<section id="hero" class="py-20 bg-gradient-to-b from-white via-blue-50/30 to-white">
				<div class="container mx-auto px-4 text-center max-w-4xl">
					<h1 class="text-5xl md:text-6xl font-bold text-cerave-blue mb-6 leading-tight">
						Build a Routine<br />You Can Trust
					</h1>
					<p class="text-xl text-gray-700 mb-4 max-w-2xl mx-auto">
						Simple steps. Clear expectations. Safer starts.
					</p>
					<p class="text-gray-600 mb-8 max-w-xl mx-auto">
						Developed with dermatological principles, our Confidence Coach helps first-time skincare users 
						create a personalized CeraVe routine with realistic timelines and safety guardrails.
					</p>
					<div class="flex flex-wrap gap-4 justify-center">
						<a href="#form" class="inline-block px-8 py-3 bg-cerave-blue text-white font-semibold rounded-lg hover:bg-cerave-blue-dark transition shadow-lg">
							Get Started
						</a>
						<a href="#timeline" class="inline-block px-8 py-3 border-2 border-cerave-blue text-cerave-blue font-semibold rounded-lg hover:bg-cerave-blue/5 transition">
							Learn More
						</a>
					</div>
				</div>
			</section>

			<section id="form" class="py-16 bg-white">
				<div class="container mx-auto px-4">
					<OnboardingForm client:load />
				</div>
			</section>

			<section id="plan" class="bg-gray-50">
				<div class="container mx-auto px-4">
					<PlanDisplay client:load />
				</div>
			</section>

			<section id="timeline">
				<ExpectationTimeline />
			</section>

			<section id="patch" class="py-16 bg-white">
				<div class="container mx-auto px-4">
					<PatchTestModal client:idle />
				</div>
			</section>

			<section id="reminders">
				<ReminderSetup client:idle />
			</section>

			<section id="myth">
				<MythCheck client:idle />
			</section>

			<section id="progress" class="bg-white">
				<ProgressTracker client:idle />
			</section>

			<section class="py-16 bg-gradient-to-b from-cerave-blue/5 to-white">
				<div class="container mx-auto px-4 text-center max-w-3xl">
					<h2 class="text-3xl font-bold text-cerave-blue mb-4">Why CeraVe?</h2>
					<div class="grid md:grid-cols-3 gap-8 mt-8">
						<div class="p-6">
							<div class="w-16 h-16 bg-cerave-blue/10 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-cerave-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							</div>
							<h3 class="font-semibold text-gray-900 mb-2">Dermatologist Developed</h3>
							<p class="text-sm text-gray-600">All CeraVe products are developed with dermatologists using evidence-based formulations.</p>
						</div>
						<div class="p-6">
							<div class="w-16 h-16 bg-cerave-blue/10 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-cerave-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
								</svg>
							</div>
							<h3 class="font-semibold text-gray-900 mb-2">Essential Ceramides</h3>
							<p class="text-sm text-gray-600">Our MVE technology delivers essential ceramides throughout the day to restore and maintain skin barrier.</p>
						</div>
						<div class="p-6">
							<div class="w-16 h-16 bg-cerave-blue/10 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-cerave-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
								</svg>
							</div>
							<h3 class="font-semibold text-gray-900 mb-2">Gentle & Effective</h3>
							<p class="text-sm text-gray-600">Non-comedogenic and fragrance-free formulas suitable for sensitive skin.</p>
						</div>
					</div>
				</div>
			</section>
		</main>

		<FooterLegal />
	</body>
</html>
