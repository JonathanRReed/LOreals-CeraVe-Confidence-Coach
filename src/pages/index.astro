---
import HeaderBrand from '../components/HeaderBrand.astro';
import ExpectationTimeline from '../components/ExpectationTimeline.astro';
import FooterLegal from '../components/FooterLegal.astro';
import OnboardingForm from '../islands/OnboardingForm';
import PlanDisplay from '../islands/PlanDisplay';
import PatchTestModal from '../islands/PatchTestModal';
import MythCheck from '../islands/MythCheck';
import ProgressTracker from '../islands/ProgressTracker';
import ReminderSetup from '../islands/ReminderSetup';
import '../styles/globals.css';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>CeraVe Confidence Coach - Build Your Skincare Routine</title>
		<meta name="description" content="Get a personalized CeraVe skincare routine designed for your unique skin needs with evidence-based guidance." />
	</head>
	<body class="antialiased">
		<HeaderBrand />
		
		<main>
			<section id="hero" class="py-12 md:py-16 lg:py-24 bg-gradient-to-b from-white via-blue-50/20 to-white">
				<div class="container mx-auto px-4 text-center max-w-5xl">
					<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-cerave-blue mb-4 leading-tight">
						Build a Routine You Can Trust
					</h1>
					<p class="text-base md:text-lg lg:text-xl text-gray-700 mb-6 md:mb-8 max-w-2xl mx-auto px-4">
						Simple steps. Clear expectations. Safer starts. Get a personalized 90-day skincare plan designed for your unique needs.
					</p>
					<a href="#form" class="inline-block px-8 md:px-10 py-3 md:py-4 bg-cerave-blue text-white font-semibold text-base md:text-lg rounded-lg hover:bg-cerave-blue-dark hover:scale-105 transition-all shadow-lg hover:shadow-xl">
						Get Your Routine
					</a>
				</div>
			</section>

			<section id="form" class="py-12 md:py-16 bg-white">
				<div class="container mx-auto px-4 max-w-6xl">
					<div class="text-center mb-10 md:mb-12">
						<h2 class="text-3xl md:text-4xl font-bold text-cerave-blue mb-3">Your Personalized Plan</h2>
						<p class="text-gray-600 max-w-2xl mx-auto">Answer a few questions and get a customized 90-day skincare routine tailored to your unique needs.</p>
					</div>
					<div class="grid grid-cols-1 lg:grid-cols-5 gap-6 md:gap-8">
						<div class="lg:col-span-2 order-1">
							<OnboardingForm client:load />
						</div>
						<div id="plan" class="lg:col-span-3 order-2">
							<PlanDisplay client:load />
						</div>
					</div>
				</div>
			</section>

			<section id="timeline" class="py-12 md:py-16 bg-gradient-to-b from-gray-50 to-white">
				<ExpectationTimeline />
			</section>

			<section id="tools" class="py-12 md:py-16 bg-white">
				<div class="container mx-auto px-4 max-w-6xl">
					<div class="text-center mb-10 md:mb-12">
						<h2 class="text-3xl md:text-4xl font-bold text-cerave-blue mb-3">Your Skincare Toolkit</h2>
						<p class="text-gray-600 max-w-2xl mx-auto">Essential resources to help you succeed on your skincare journey.</p>
					</div>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
						<div class="bg-gradient-to-br from-blue-50 to-white border border-cerave-blue/20 rounded-2xl p-6 md:p-8">
							<PatchTestModal client:idle />
						</div>
						<div class="bg-gradient-to-br from-blue-50 to-white border border-cerave-blue/20 rounded-2xl p-6 md:p-8">
							<ReminderSetup client:idle />
						</div>
					</div>
				</div>
			</section>

			<section id="myth" class="py-12 md:py-16 bg-gradient-to-b from-gray-50 to-white">
				<div class="container mx-auto px-4 max-w-6xl">
					<div class="text-center mb-10 md:mb-12">
						<h2 class="text-3xl md:text-4xl font-bold text-cerave-blue mb-3">Track & Learn</h2>
						<p class="text-gray-600 max-w-2xl mx-auto">Check skincare claims and monitor your progress along the way.</p>
					</div>
					<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8 items-start">
						<div>
							<MythCheck client:idle />
						</div>
						<div>
							<ProgressTracker client:idle />
						</div>
					</div>
				</div>
			</section>

			<section class="py-12 md:py-20 bg-gradient-to-b from-cerave-blue/5 via-blue-50/30 to-white">
				<div class="container mx-auto px-4 text-center max-w-5xl">
					<h2 class="text-3xl md:text-4xl font-bold text-cerave-blue mb-4">Why CeraVe?</h2>
					<p class="text-gray-600 max-w-2xl mx-auto mb-10">Trusted by dermatologists and loved by millions for effective, gentle skincare.</p>
					<div class="grid md:grid-cols-3 gap-8">
						<div class="p-6 bg-white rounded-xl shadow-sm">
							<div class="w-16 h-16 bg-cerave-blue/10 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-cerave-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
								</svg>
							</div>
							<h3 class="font-semibold text-gray-900 mb-2">Dermatologist Developed</h3>
							<p class="text-sm text-gray-600">All CeraVe products are developed with dermatologists using evidence-based formulations.</p>
						</div>
						<div class="p-6 bg-white rounded-xl shadow-sm">
							<div class="w-16 h-16 bg-cerave-blue/10 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-cerave-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"></path>
								</svg>
							</div>
							<h3 class="font-semibold text-gray-900 mb-2">Essential Ceramides</h3>
							<p class="text-sm text-gray-600">Our MVE technology delivers essential ceramides throughout the day to restore and maintain skin barrier.</p>
						</div>
						<div class="p-6 bg-white rounded-xl shadow-sm">
							<div class="w-16 h-16 bg-cerave-blue/10 rounded-full flex items-center justify-center mx-auto mb-4">
								<svg class="w-8 h-8 text-cerave-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
								</svg>
							</div>
							<h3 class="font-semibold text-gray-900 mb-2">Gentle & Effective</h3>
							<p class="text-sm text-gray-600">Non-comedogenic and fragrance-free formulas suitable for sensitive skin.</p>
						</div>
					</div>
				</div>
			</section>
		</main>

		<FooterLegal />
	</body>
</html>
